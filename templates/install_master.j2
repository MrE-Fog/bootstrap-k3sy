#!/bin/bash
k3sup install \
  --k3s-version {{ k3s_version  }} \
  --ip {{ ansible_host }} \
  --user debian  \
  --cluster \
  --k3s-extra-args '--flannel-iface {{ cluster_iface }} --no-deploy=traefik --advertise-address={{ internal_ip }} --node-ip={{ internal_ip }} --node-external-ip {{ external_ip }}'
sleep 10
